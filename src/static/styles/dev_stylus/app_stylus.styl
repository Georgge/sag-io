//// variables
// colors
$white = #f8f8f8
$raisinBlack = #262322
$gargoyleGas = #fde74c
$androidGreen = #9bc53d
$flame = #e55934
$princetonOrange = #fa7921

// measurements
$padding = 10px // just for general padding
$fileEditorWidth = 264px

html
body
h1
  margin: 0
body
  font-family: 'Lato', sans-serif
  background: $raisinBlack

.wrapper-container
  max-width: 100vw
  min-height: 100vh

.wrapper
  width: 100%
  min-height: 100vh
  padding: $padding
  box-sizing: border-box
  background: $raisinBlack



// initial screen
.initial-screen
  display: flex
  align-items: center
  justify-content: center



// files screen
.files-screen
  display: flex
  justify-content: center
  align-items: center
  flex-wrap: wrap

.files-editor
  width: $fileEditorWidth
  height: 100vh
  position: fixed
  right: 0
  top: 0
  border-left: 4px solid $flame
  box-shadow: 4px 0 40px #000000
  display: flex
  justify-content: center
  flex-wrap: wrap

.files-container
  width: 100%
  min-height: 100%
  margin-right: $fileEditorWidth
  display: flex
  flex-wrap: wrap
  justify-content: space-around



// spinner
.activity-spinner
  width: 100vw
  height: 100vh
  position: fixed
  top: 0
  left: 0
  display: flex
  justify-content: center
  align-items: center

.spinner
  margin: 100px auto
  width: 40px
  height: 40px
  position: relative
  text-align: center
  -webkit-animation: sk-rotate 2.0s infinite linear
  animation: sk-rotate 2.0s infinite linear

.dot1
.dot2
  width: 60%
  height: 60%
  display: inline-block
  position: absolute
  top 0
  background-color: #333
  border-radius: 100%
  -webkit-animation: sk-bounce 2.0s infinite ease-in-out
  animation: sk-bounce 2.0s infinite ease-in-out
  background: $androidGreen

.dot2
  top: auto
  bottom: 0
  -webkit-animation-delay: -1.0s
  animation-delay: -1.0s
  background: $flame

@-webkit-keyframes sk-rotate { 100% { -webkit-transform: rotate(360deg) }}
@keyframes sk-rotate { 100% { transform: rotate(360deg); -webkit-transform: rotate(360deg) }}

@-webkit-keyframes sk-bounce {
  0%, 100% { -webkit-transform: scale(0.0) }
  50% { -webkit-transform: scale(1.0) }
}

@keyframes sk-bounce {
  0%, 100% { 
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 50% { 
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}



// geric classes
.full__screen
  width: 100%
  height 100%

.not__visible
  display: none

.icon-button
  height: 24px
  width: fit-content
  display: flex
  flex-wrap: nowrap
  >span
    display: inline-block
    width: 22px
    height 22px
    background-image: url('../../icons/folder.png')
    background-size: contain
    margin-right: 4px
  >div
    margin-left: 4px
    color: $androidGreen

.track-container
.folder-container
  width: 160px
  height: 210px
  //background: green
  padding: 8px
  box-sizing: border-box
  margin: 8px

.disc--cover
  width: 100%
  height: 160px - 16px
  background: $flame
  border-radius: 4px
  margin-bottom: 2px
  display: flex
  justify-content: center
  align-items: center
  &__icon
    width: 130px
    height: 130px
    background-image: url('../../icons/compact-disc.png')
    background-size: contain
  &__image
    width: 100%
    height: 100%
    border-radius: 4px
  &-tag
    color: $androidGreen
    font-size: 0.85rem
    padding: 2px 0px 2px 0px
    box-sizing: border-box
    &:last-child
      color: $princetonOrange

.folder--icon
  width: 100%
  height: 160px - 16px
  background-image: url('../../icons/folderl.png')
  background-size: contain
  margin-bottom: 2px
  &-tag
    color: $white
    font-size: 0.85rem
    padding: 2px 0px 2px 0px
    box-sizing: border-box
