cover()
  width: 50%
  display: flex
  justify-content: center
  align-items: center
  flex-wrap: wrap

  &--image
    width: 348px
    height: 348px
    background-color: $colorPink
    border-radius: 3px
    display: flex
    justify-content: center
    align-items: center

    &__without
      width: 268px
      height: 268px
      background-image: url('../icons/cover-whitout-dic.png')
      background-size: cover

    &__with
      width: 348px
      height: 348px
      border-radius: 3px

cover-data()
  width: 50%
  height: 348px

  &--item
    display: flex
    margin-bottom: 14px

    &:last-child
      margin-bottom: 0

    &:first-child
      margin-top: 12px

  &--icon
    width: 20px
    height: 20px
    padding-top: 4px
    padding-bottom: 4px
    padding-right: 10px
    display: flex
    justify-content: center
    align-items: center
    > img
      width: 18px
      height: 18px

  &--value
    height: 28px
    width: 100%
    line-height: 28px
    padding-left: 10px
    color: $colorWhite
    font-size: 1.22rem
    text-align: left

  &--input
    min-width: 100%
    height: 100%
    font-size: 1.22rem
    color: $colorWhite
    background-color: rgba(0, 0, 0, 0.2)
    border-radius: 3px
    border: 0px
    padding-right: 4px
    padding-left: 4px
    box-sizing: border-box

  &__without
    height: 348px
    text-align: center
    line-height: 348px
    font-size: 2rem
    color: $colorWhite

cover-bg()
  position: absolute
  top: -15px
  right: 0
  bottom: 0
  left: 0
  width: 100%
  z-index: -1

buttons-edit()
  width: 100%
  display: flex
  justify-content: flex-end

  &--btn
    width: 28px
    height: 28px
    border-radius: 3px
    background-color: $colorPink
    position: relative

    &:last-child
      margin-left: 12px

      &:after
        content: ''
        position: absolute
        top: 4px
        right: 4px
        bottom: 4px
        left: 4px
        background-image: url('../icons/edit.png')
        background-size: cover

    &:first-child
      &:after
        content: ''
        position: absolute
        top: 4px
        right: 4px
        bottom: 4px
        left: 4px
        background-image: url('../icons/magic.png')
        background-size: cover

buttons-save()
  width: 28px
  height: 28px
  border-radius: 3px
  background-color: $colorPink
  position: relative
  margin-left: 12px

  &:after
    content: ''
    position: absolute
    top: 4px
    right: 4px
    bottom: 4px
    left: 4px
    background-image: url('../icons/save-button.png')
    background-size: cover


