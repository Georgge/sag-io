@import './spinner'

/* --- Variables --- */
$lateralPanelWidth = 249px

.main
  width: 100vw
  height: 100vh
  padding-left: $lateralPanelWidth
  box-sizing: border-box

.files-container
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  box-sizing: border-box
  max-width: 776px
  min-width: 776px

.cover
  height: 397px
  width: 776px
  background-color: #440045

.mini-cover
  width: 128px
  height: 128px
  background-color: #ff00cc
  margin: 8px

  &--image
    width: 128px
    height: 128px

.lateralPanel
  width: $lateralPanelWidth
  height: 100vh
  position: absolute
  top: 0
  left: 0
  bottom: 0
  background-color: #252222

.spinner-container
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  display: flex
  justify-content: center
  align-items: center
.spinner
  spinner()