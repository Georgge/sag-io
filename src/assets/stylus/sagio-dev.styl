@import './spinner'

/* --- Variables --- */
$lateralPanelWidth = 249px
$minicoverSize = 128px
$generalPadding = 20px
$colorWhite = #e3e3e3
$colorGrey = #5d5d5d
$colorPink = #ff00cc
$colorBG = #070607

.main
  height: 100vh
  padding-left: $lateralPanelWidth
  box-sizing: border-box

.cover-container
  height: 397px
  background-color: #440045
  padding: $generalPadding
  box-sizing: border-box
  display: flex
  align-items: center
  flex-wrap: wrap

.cover
  width: 50%
  display: flex
  justify-content: center
  align-items: center
  flex-wrap: wrap

  &--image
    width: 348px
    height: 348px
    background-color: $colorPink
    border-radius: 3px
    display: flex
    justify-content: center
    align-items: center

    &__without
      width: 268px
      height: 268px
      background-image: url('../icons/cover-whitout-dic.png')
      background-size: cover

.cover-data
    width: 50%
    height: 348px

.files-container
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  box-sizing: border-box
  background-color: $colorBG
  padding: $generalPadding
  min-height: 369px
  height: 369px
  overflow-y: scroll

.mini-cover
  width: $minicoverSize
  height: 188px
  margin: 4px

  &--image
    background-color: $colorPink
    width: $minicoverSize
    height: $minicoverSize
    display: flex
    justify-content: center
    align-items: center
    border-radius: 3px
    cursor: pointer
    
    &__with
      width: $minicoverSize
      height: $minicoverSize
      border-radius: 3px
    &__without
      width: 96px
      height: 96px
      background-image: url('../icons/cover-whitout-dic.png')
      background-position: center
      background-size: cover

  &--tags
    width: $minicoverSize
    height: auto
    padding-top: 4px
    padding-bottom: 4px
    box-sizing: border-box
    font-size: 0.75rem
    text-align: left 
    > p
      margin-top: 4px
      margin-bottom: 4px
      color: $colorWhite

      &:last-child
        color: $colorGrey

.lateralPanel
  width: $lateralPanelWidth
  height: 100vh
  position: absolute
  top: 0
  left: 0
  bottom: 0
  background-color: #252222

.spinner-container
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  display: flex
  justify-content: center
  align-items: center
.spinner
  spinner()