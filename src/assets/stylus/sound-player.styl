sound-player()
  height: 68px
  background-color: rgba(7, 6, 7, 0.85);
  position: absolute
  right: 0
  bottom: 0
  left: 0
  border-top: 1px solid $colorGrey
  display: flex
  align-items: center
  justify-content: space-between
  padding-top: 8px
  padding-right: 20px
  padding-bottom: 8px
  padding-left: 20px
  box-sizing: border-box

cover-player()
  background-color: $colorPink
  height: 100%
  width: 52px
  min-width: 52px
  display: flex
  justify-content: center
  align-items: center
  margin-right: 12px

  &__with
    height: 100%
    width: 52px
  
  &__without
    height: 38px
    width: 38px
    background-image: url('../icons/cover-whitout-dic.png')
    background-size: cover

  &--data
    height: 100%
    width: 250px
    margin-right: 20px
    font-size: 0.7rem
    padding-top: 4px
    box-sizing: border-box

    >div
      text-align: left
      color: $colorGrey

      &:first-child
        margin-bottom: 4px
        color: $colorWhite
  
controls-player()
  background-color: green
  height: 100%
  width: 100%


